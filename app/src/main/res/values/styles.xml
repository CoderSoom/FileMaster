<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/brand</item>
        <item name="colorPrimaryDark">@color/brand_500</item>
        <item name="colorAccent">@color/brand_100</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="roundedCornersImageView" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/px12</item>
    </style>

    <style name="Small.Button.Yellow" parent="Primary.Small.Button.Blue">
        <item name="android:background">@drawable/bg_primary_button_yellow</item>
    </style>

    <style name="Home.Label.Category" parent="Overline">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginStart">@dimen/px16</item>
        <item name="android:layout_marginTop">@dimen/px14</item>
        <item name="android:layout_marginBottom">@dimen/px14</item>
        <item name="android:textColor">@color/label_sec</item>
    </style>

    <style name="Item.Title.Text" parent="Paragraph">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/px8</item>
        <item name="android:layout_marginTop">@dimen/px8</item>
        <item name="android:layout_marginEnd">@dimen/px4</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Item.Subtitle.Text" parent="Item.Title.Text">
        <item name="android:textSize">@dimen/sp14</item>
        <item name="lineHeight">@dimen/px20</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">@dimen/px8</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_border_bottom_sheet</item>
    </style>

    <style name="Button.GDrive" parent="Button2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="drawableStartCompat">@drawable/ic_drive_small</item>
        <item name="lineHeight">0dp</item>
        <item name="android:paddingStart">@dimen/px12</item>
        <item name="android:paddingEnd">@dimen/px12</item>
        <item name="android:paddingTop">@dimen/px4</item>
        <item name="android:paddingBottom">@dimen/px4</item>
        <item name="android:drawablePadding">@dimen/px4</item>
        <item name="android:layout_marginTop">@dimen/px4</item>
        <item name="android:background">@drawable/selector_button_gdrive</item>
    </style>

    <style name="Button.GDrive.Large" parent="Button">
        <item name="android:drawablePadding">@dimen/px4</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_button_gdrive</item>
        <item name="drawableStartCompat">@drawable/ic_google_drive_24</item>
        <item name="android:paddingStart">@dimen/px24</item>
        <item name="android:paddingEnd">@dimen/px24</item>
        <item name="android:paddingTop">@dimen/px12</item>
        <item name="android:paddingBottom">@dimen/px12</item>
        <item name="textAllCaps">true</item>
    </style>

</resources>
